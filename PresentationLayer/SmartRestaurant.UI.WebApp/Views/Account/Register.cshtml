@model SmartRestaurant.Model.RestaurantModel
    @{ Layout = "";}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Register</title>
        <!-- Google Font: Source Sans Pro -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="../Content/Theme/plugins/fontawesome-free/css/all.min.css">
        <!-- icheck bootstrap -->
        <link rel="stylesheet" href="../Content/Theme/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="../Content/Theme/dist/css/adminlte.min.css">
    </head>
    <body class="hold-transition register-page" style="background-image: url('../../Content/Theme/dist/img/LoginPage.jpg');">
        <div class="register-box">
            <div class="register-logo">
                <a href="../Content/Theme/index2.html" class="h3" style="color:white;">Smart Restaurant</a>
            </div>
            <div class="card">
                <div class="card-body register-card-body">
                    <p class="login-box-msg">Register a new membership</p>
                    @*@using (Html.BeginForm("Create", "Restaurant", FormMethod.Post))*@
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.Res_Name, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.Res_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Restaurant Name" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-hotel"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Res_Area, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.Res_Area, new { htmlAttributes = new { @class = "form-control", placeholder = "Restaurant area" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-street-view"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Res_Type, "", new { @class = "text-danger", placeholder = "Restaurant Type" })
                        <div class="input-group mb-3">
                            @Html.DropDownListFor(model => model.Res_Type, new List<SelectListItem>{
                                                                                        new SelectListItem{ Text="Veg", Value = "Veg" },
                                                                                        new SelectListItem{ Text="Veg-Non", Value = "Veg-Non" },
                                                                                        new SelectListItem{ Text="Veg-Non Veg", Value = "Veg-Non Veg" },
                                                                                        }, "Restaurant Type", new { @class = "form-control" })

                            <div class="input-group-append">
                                <div class="input-group-text">
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "User name" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Res_Email, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.Res_Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">

                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <input type="submit" value="Register" class="btn btn-primary" />

                            </div>
                            <!-- /.col -->
                        </div>
                    }

                    <a href="login" class="text-center">I already have a membership</a>
                </div>
                <!-- /.form-box -->
            </div><!-- /.card -->
        </div>
        <!-- /.register-box -->
        <!-- jQuery -->
        <script src="../Content/Theme/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="../Content/Theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="../Content/Theme/dist/js/adminlte.min.js"></script>
    </body>
    </html>

