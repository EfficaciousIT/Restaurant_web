@model IEnumerable<SmartRestaurant.Model.RestaurantModel>
<p>
    <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "Restaurant" , new { Area = "Masters" })" >
        <i class="fa fa-lg fa-fw fa-plus"></i>
        Add
    </a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th width="10%">
        </th>
        <th width="30%">
            @Html.DisplayNameFor(model => model.Res_Name)
        </th>
        <th width="20%">
            @Html.DisplayNameFor(model => model.Res_Area)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Res_Type)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Res_Phone)
        </th>

        <th width="20%">
            @Html.DisplayNameFor(model => model.Res_Email)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a class="btn btn-xs btn-success" title="Edit" href="@Url.Action("Edit", "Restaurant" , new { Area = "Masters", code=item.ResId })" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true">
                <i class="fa fa-fw fa-edit"></i>
            </a>
            <a class="btn btn-xs btn-danger" title="Delete" href="@Url.Action("Delete", "Restaurant" , new { Area = "Masters", code=item.ResId})" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true">
                <i class="fa fa-fw fa-ban"></i>
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Res_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Res_Area)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Res_Type)            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Res_Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Res_Email)
        </td>
    </tr>
}
</table>
