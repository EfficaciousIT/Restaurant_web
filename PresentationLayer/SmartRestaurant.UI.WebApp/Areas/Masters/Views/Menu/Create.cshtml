@model SmartRestaurant.Model.MenuModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card card-info">
        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.Cat_Id, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Cat_Id, new SelectList(Model.foodCategoryList, "Cat_Id", "Cat_Name"), "---Select---", new { @class = "form-control focus col-md-4", autocomplete = "off"})
                        @Html.ValidationMessageFor(model => model.Cat_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Menu_Type, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Menu_Type, new List<SelectListItem>{
                                                                                    new SelectListItem{ Text="Veg", Value = "Veg" },
                                                                                    new SelectListItem{ Text="Veg-Non", Value = "Veg-Non" },
                                                                                    new SelectListItem{ Text="Veg-Non Veg", Value = "Veg-Non Veg" },
                                                                                    }, new { @class = "form-control col-md-2" })                        
                        @Html.ValidationMessageFor(model => model.Menu_Type, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Menu_Name, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Menu_Name, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.Menu_Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a class="btn btn-default btn-sm" href="@Url.Action("Index", "Menu" , new { Area = "Masters" })">
                            <i class="fa fa-lg fa-fw fa-reply"></i>
                            Cancel
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}