@model IEnumerable<SmartRestaurant.Model.CategoryModel>
<p>
    <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "FoodCategory" , new { Area = "Masters" })">
        <i class="fa fa-lg fa-fw fa-plus"></i>
        Add
    </a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th width="10%">
        </th>
        <th width="90%">
            @Html.DisplayNameFor(model => model.Cat_Name)
        </th>        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a class="btn btn-xs btn-success" title="Edit" href="@Url.Action("Edit", "FoodCategory" , new { Area = "Masters", code=item.Cat_Id })" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true">
                    <i class="fa fa-fw fa-edit"></i>
                </a>
                <a class="btn btn-xs btn-danger" title="Delete" href="@Url.Action("Delete", "FoodCategory" , new { Area = "Masters", code=item.Cat_Id})" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true">
                    <i class="fa fa-fw fa-ban"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cat_Name)
            </td>            
        </tr>
    }
</table>
