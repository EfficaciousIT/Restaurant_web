@model SmartRestaurant.Model.CategoryModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card card-info">
        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.Cat_Name, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cat_Name, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.Cat_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a class="btn btn-default btn-sm" href="@Url.Action("Index", "FoodCategory" , new { Area = "Masters" })">
                            <i class="fa fa-lg fa-fw fa-reply"></i>
                            Cancel
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}