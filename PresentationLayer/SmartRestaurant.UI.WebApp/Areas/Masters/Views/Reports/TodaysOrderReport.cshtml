@model SmartRestaurant.Model.RptOrderSearchModel
@{
    List<string> lstStatus = TempData["lstStatus"] as List<string>;
}
<p>
    @using (Html.BeginForm())
    {
    <div class="form-group row">
        @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "lead col-md-1" })
        <div class="col-md-2">
            @Html.TextBoxFor(model => model.FromDate, new { @class = "datetimepicker form-control col-md-8", id = "FromDate" })
            @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "lead col-md-1" })
        <div class="col-md-2">
            @Html.TextBoxFor(model => model.ToDate, new { @class = "datetimepicker form-control col-md-8", id = "ToDate" })
            @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "lead col-md-1" })
        <div class="col-md-2">
            <select id="ddlStatus" class="form-control">
                <option value="0">All</option>
                @if (lstStatus != null)
                {
                    foreach (var item in lstStatus)
                    {

                        <text>
                            <option value="@item">@item</option>
                        </text>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-success fa-search" />
        </div>
        
    </div>
    }
</p>
