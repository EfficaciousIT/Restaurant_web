            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({FromDate:$("#FromDate").val(),ToDate:$("#ToDate").val(),Status:$("#ddlStatus").val()}),
            success: function (data) {

                        $("#tblOrderDtl >tbody >tr").remove();
                        $.each( data, function( i, item ) {
                        debugger;
