@model SmartRestaurant.Model.UserModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card card-info">
        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Res_Id)
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserType_Id, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.UserType_Id, new SelectList(Model.LstUserType, "User_Id", "User_Name"), "---Select---", new { @class = "form-control focus col-md-4", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.UserType_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Employee_Id, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Employee_Id, new SelectList(Model.LstEmployee, "Employee_Id", "fullName"), "---Select---", new { @class = "form-control focus col-md-4", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Employee_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.User_Name, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                        @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a class="btn btn-default btn-sm" href="@Url.Action("Index", "User" , new { Area = "Masters" })">
                            <i class="fa fa-lg fa-fw fa-reply"></i>
                            Cancel
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}