                    @Html.LabelFor(model => model.Mobile_No, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mobile_No, new { htmlAttributes = new { @class = "form-control col-md-2", MaxLength = "10", disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Mobile_No, "", new { @class = "text-danger" })
