@model IEnumerable<SmartRestaurant.Model.EmployeeModel>
<p>
    <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "Employee" , new { Area = "Masters" })">
        <i class="fa fa-lg fa-fw fa-plus"></i>
        Add
    </a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th width="10%">
        </th>
        <th width="75%">
            @Html.DisplayNameFor(model => model.fullName)
        </th>
        <th width="15%">
            @Html.DisplayNameFor(model => model.Mobile_No)
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <a class="btn btn-xs btn-success" title="Edit" href="@Url.Action("Edit", "Employee" , new { Area = "Masters", code=item.Employee_Id })" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true">
                <i class="fa fa-fw fa-edit"></i>
            </a>
            <a class="btn btn-xs btn-danger" title="Delete" href="@Url.Action("Delete", "Employee" , new { Area = "Masters", code=item.Employee_Id})" data-ajax-update="#mainContent" data-ajax-mode="replace" data-ajax-method="GET" data-ajax="true">
                <i class="fa fa-fw fa-ban"></i>
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.First_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile_No)
        </td>
    </tr>
    }
</table>
